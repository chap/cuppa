%ul.nav
    -if user_logged_in?

        %li.home-page-menu-item
            = link_to admin_dashboard_path do
                .icon-user.icon-white
                Dashboard

        %li.home-page-menu-item
            = link_to admin_courses_path do
                .icon-user.icon-white
                Upcoming Courses

        %li.home-page-menu-item
            = link_to admin_users_path do
                .icon-user.icon-white
                Users
        %li.home-page-menu-item
            = link_to 'Logout admin',logout_path(@session)

    -else
        %li.home-page-menu-item
            = link_to 'Login', login_path(@session)
        %li.home-page-menu-item
            = link_to'Sign up', signup_path(@user)

