
%ul.nav
  - if user_logged_in?
    %li.home-page-menu-item 
      = link_to 'Logout',logout_path(@session)
    %li.home-page-menu-item
      = link_to("#{current_user.email}", '#')

    %li.home-page-menu-item
      = link_to 'My Courses', registrations_path
  
    %li.home-page-menu-item 
      = link_to registrations_path do
        .i{:class=>'icon-user icon-white'}
        My Courses
            
       
    %li.home-page-menu-item 
      = link_to edit_user_path(current_user) do
        .i{:class=>'icon-wrench icon-white'}
        Edit


  - else
    %li.home-page-menu-item
      = link_to 'Login', login_path(@session)   
    %li.home-page-menu-item
      = link_to'Sign up', signup_path(@user)

  -if user_logged_in? && current_user.admin?
    %li.home-page-menu-item 
      = link_to 'Users', users_path
