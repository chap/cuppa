
%ul.nav
  - if user_logged_in?
    /%li.home-page-menu-item
    /  Logged in as #{current_user.email}

    %li.home-page-menu-item 
      = link_to courses_path do
        .icon-user.icon-white
        List Courses

    %li.home-page-menu-item 
      = link_to registrations_path do
        .icon-user.icon-white
        My Courses
            
    %li.home-page-menu-item 
      = link_to edit_user_path(current_user) do
        .icon-wrench.icon-white
        Edit Details

    %li.home-page-menu-item 
      = link_to 'Logout',logout_path(@session)

  - else
    %li.home-page-menu-item
      = link_to 'Login', login_path(@session)   
    %li.home-page-menu-item
      = link_to'Sign up', signup_path(@user)

  -if user_logged_in? && current_user.admin?
    %li.home-page-menu-item 
      = link_to 'Admin', admin_path
