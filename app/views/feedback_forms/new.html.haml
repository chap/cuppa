%h2 Feedback form: 

=form_tag registration_feedback_form_path, :class => "feedback_form", method: :post do
    -@registration.course.feedback_questions.each do |question|
        =label_tag :answer, question.content, :class => "feedback_questions"
        =edit_question_field(question) 
    =submit_tag "Complete Feedback Form" , :class => 'btn btn-primary'
