= simple_form_for @user, { :class => 'form-horizontal'} do |f|

  =f.input :name, label: "first name"


  =f.input :last_name

  =f.input :email

  =f.input :password

  =f.input :password_confirmation
   
  =f.input :mobile


  = f.label :nhs_trust, label: "NHS Trust"
  = f.text_field :trust, data: {autocomplete_source: locations_path} 

 
 

  .div
  = f.submit nil, label:'Save', :class => 'btn btn-primary'
