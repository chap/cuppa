= simple_form_for @user, { :class => 'form-horizontal'} do |f|

  =f.input :name, label: "first name"


  =f.input :last_name

  =f.input :email

  =f.input :password

  =f.input :password_confirmation
   
  =f.input :mobile

  /=f.association :location, collection: Location.trust.all(order:'trust ASC'), prompt: "Choose a hospital", label_method: :trust, value_method: :id, include_blank: false

 
  = f.text_field :trust, data: {autocomplete_source: locations_path} 

  /%input.span3{"data-items" => "8", "data-provide" => "typeahead", "data-source" => @locations.to_json, :style => "margin: 0 auto;", :type => "text"}
 

  -if user_logged_in? && current_user.admin?
    = f.input :admin, label:'toggle to set admin rights', :as=> :boolean

  = f.submit nil, label:'Save', :class => 'btn btn-primary'
 

  

 

 

  


  

  


