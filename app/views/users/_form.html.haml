=render 'layouts/errormessages'

.field
    = f.label :name
    = f.text_field :name
.field
    = f.label :email
    = f.text_field :email

.field
    = f.label :password
    = f.password_field :password

.field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

.field
    = f.label :mobile
    = f.text_field :mobile

-if user_logged_in? && current_user.admin?
    = f.label :toggle_to_set_admin_rights
    = f.check_box :admin 
.actions
    = f.submit 'Save'



