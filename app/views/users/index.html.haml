%h1 Listing users

%table.table.table-striped.table-hover
  %tr
    %th Name
    %th Email
    %th Mobile
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= user.mobile
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
      

%br

