= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :Date
    = f.date_select :start_time, :order => [:day, :month, :year]
  .field
    = f.label :start_time
    = f.time_select :start_time, {:minute_step => 15}, :ignore_date => true
  
  .field
    = f.label :end_time
    = f.time_select :end_time, {:minute_step => 15},:ignore_date => true
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :places
    = f.text_field :places_available
  .actions
    = f.submit 'Save'
